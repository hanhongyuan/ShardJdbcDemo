<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mapper.OrderMapper">
	<resultMap id="BaseResultMap" type="com.test.model.Order">
		<id column="order_id" property="orderId" jdbcType="INTEGER" />
		<result column="user_id" property="userId" jdbcType="INTEGER" />
		<result column="order_amount" property="orderAmount" jdbcType="INTEGER" />
	</resultMap>
	<select id="getOrderListByUserId" resultMap="BaseResultMap"
		parameterType="int">
		select order_id, user_id, order_amount from t_order where
		user_id=#{userId}
	</select>
	
	<select id="getOrderByOrderId" resultMap="BaseResultMap"
		parameterType="int">
		select order_id, user_id, order_amount
		  from t_order
		 where order_id=#{orderId}
	</select>
	
	<insert id="createOrder" parameterType="com.test.model.Order">
		insert into
		t_order(user_id, order_id, order_amount) values (#{userId}, #{orderId}, #{orderAmount})
	</insert>
</mapper>